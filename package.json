{
	"name": "@troychaplin79/design-ui",
	"private": false,
	"version": "0.0.7",
	"type": "module",
	"main": "dist/design-ui.umd.js",
	"module": "dist/design-ui.es.js",
	"types": "dist/index.d.ts",
	"files": [
		"/dist",
		"/dist/style.css"
	],
	"scripts": {
		"build": "concurrently \"yarn build:css\" \"tsc && vite build\"",
		"build:css": "tailwindcss -m -i ./src/tailwind-entry.css -o ./dist/index.css",
		"storybook": "concurrently \"yarn storybook:css\" \"storybook dev -p 6006\"",
		"storybook:css": "tailwindcss -w -i ./src/tailwind-entry.css -o ./src/index.css",
		"build-storybook": "concurrently \"yarn build-storybook:css\" \"storybook build\"",
		"build-storybook:css": "tailwindcss -m -i ./src/tailwind-entry.css -o ./src/index.css",
		"clean": "rm -rf node_modules ; rm yarn.lock ; yarn install"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@storybook/addon-essentials": "^7.0.0-beta.50",
		"@storybook/addon-interactions": "^7.0.0-beta.50",
		"@storybook/addon-links": "^7.0.0-beta.50",
		"@storybook/blocks": "^7.0.0-beta.50",
		"@storybook/react": "^7.0.0-beta.50",
		"@storybook/react-vite": "^7.0.0-beta.50",
		"@storybook/testing-library": "^0.0.14-next.1",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^8.3.0",
		"concurrently": "^7.6.0",
		"postcss": "^8.4.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.0-beta.50",
		"tailwindcss": "^3.2.7",
		"typescript": "^4.9.3",
		"vite": "^4.1.0",
		"vite-plugin-dts": "^1.7.1",
		"vite-tsconfig-paths": "^4.0.3"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
